<% provide :title, t("home.title") %>
<div class="flex items-center justify-center min-h-screen pt-20">
  <div class="bg-white bg-opacity-80 p-6 rounded shadow text-center">
    <% if user_signed_in? %>
      <h2 class="text-2xl font-bold mb-4"><%= t("home.welcome", user: current_user.email) %></h2>

      <div class="flex flex-col items-center space-y-4">
        <!-- 機能一覧 -->
        <%= link_to mypage_path, class: "inline-block w-48 bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 flex items-center justify-center space-x-2" do %>
          <i class="fas fa-list"></i>
          <span><%= t("home.features") %></span>
        <% end %>

        <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "inline-block w-48 bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600 flex items-center justify-center space-x-2" do %>
          <i class="fas fa-sign-out-alt"></i>
          <span><%= t("home.logout") %></span>
        <% end %>
      </div>
    <% else %>
      <h2 class="text-2xl font-bold mb-4"><%= t("home.login_signup") %></h2>

      <div class="flex flex-col items-center space-y-3">
        <%= link_to new_user_session_path, class: "inline-block w-48 bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 flex items-center justify-center space-x-2" do %>
          <i class="fas fa-sign-in-alt"></i>
          <span><%= t("home.login") %></span>
        <% end %>

        <%= link_to new_user_registration_path, class: "inline-block w-48 bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600 flex items-center justify-center space-x-2" do %>
          <i class="fas fa-user-plus"></i>
          <span><%= t("home.signup") %></span>
        <% end %>

        <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, form: { data: { turbo: false } }, class: "inline-block w-48 bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600 flex items-center justify-center space-x-2" do %>
          <i class="fab fa-google"></i>
          <span><%= t("home.google_login") %></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
