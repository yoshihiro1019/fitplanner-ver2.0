<!-- app/views/tasks/index.html.erb (例) -->

<div class="flex items-center justify-center min-h-screen pt-20">
  <div class="bg-white bg-opacity-80 p-6 rounded shadow">
    <% if user_signed_in? %>
      <!-- ログイン済みの場合 -->
      <h2 class="text-2xl font-bold mb-4">ようこそ、<%= current_user.email %>さん！</h2>
      <!-- ログアウトボタンのみ表示 -->
      <div>
        <%= link_to 'ログアウト', destroy_user_session_path,
          data: { turbo_method: :delete },
          class: "inline-block w-48 bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600" %>
      </div>
    <% else %>
      <!-- ログインしていない場合 -->
      <h2 class="text-2xl font-bold mb-4">ログイン / サインアップ</h2>
      <div class="mb-3">
        <%= link_to 'ログイン', new_user_session_path,
          class: "inline-block w-48 bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
      </div>
      <div class="mb-3">
        <%= link_to 'サインアップ', new_user_registration_path,
          class: "inline-block w-48 bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600" %>
      </div>
      <div>
        <%= button_to "Googleでログイン",
          user_google_oauth2_omniauth_authorize_path,
          method: :post,
          form: { data: { turbo: false } },
          class: "inline-block w-48 bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600" %>
      </div>
    <% end %>
  </div>
</div>

