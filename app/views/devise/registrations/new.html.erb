<div class="container mx-auto max-w-lg p-6 bg-white rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold text-gray-800 mb-6">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <!-- エラーメッセージ -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Email -->
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Password -->
    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 mt-2" %>
    </div>

    <!-- Password Confirmation -->
    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Submit Button -->
    <div>
      <%= f.submit "Sign up", class: "w-full bg-blue-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>
  <% end %>

  <!-- リンク -->
  <%= render "devise/shared/links" %>
</div>

