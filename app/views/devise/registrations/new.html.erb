<% provide :title, t("devise.registrations.new.title") %>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md mt-10">
  <h2 class="text-2xl font-bold text-gray-800 mb-6"><%= t("devise.registrations.new.heading") %></h2>

  <%= form_with(model: resource, url: registration_path(resource_name), local: true, class: "space-y-4", html: { novalidate: true }) do |f| %>

    <!-- エラーメッセージ -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="p-2 text-gray-700 rounded-lg mt-6">
      <!-- メールアドレス -->
      <div class="space-y-1">
        <%= f.label :email, t("activerecord.attributes.user.email"), class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, class: "input-field", autofocus: true, autocomplete: "email" %>
      </div>

      <!-- パスワード -->
      <div class="space-y-1 mt-4">
        <%= f.label :password, t("activerecord.attributes.user.password"), class: "block text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">(<%= @minimum_password_length %> <%= t("devise.shared.characters_or_more") %>)</em>
        <% end %>
        <%= f.password_field :password, class: "input-field", autocomplete: "new-password" %>
      </div>

      <!-- パスワード確認 -->
      <div class="space-y-1 mt-4">
        <%= f.label :password_confirmation, t("devise.registrations.new.password_confirmation"), class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, class: "input-field", autocomplete: "new-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center space-x-2 mt-4">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-500 rounded focus:ring-2 focus:ring-blue-500" %>
          <%= f.label :remember_me, t("devise.sessions.new.remember_me"), class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <!-- サインアップボタン -->
      <div>
        <%= f.submit t("devise.registrations.new.submit"), class: "w-full py-2 px-4 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 mt-5" %>
      </div>

      <!-- ソーシャルログイン（コメントアウト中） -->
      <div class="mt-4">
        <%# Googleなどのソーシャルログインをここに %>
      </div>
    </div>
  <% end %>
</div>
