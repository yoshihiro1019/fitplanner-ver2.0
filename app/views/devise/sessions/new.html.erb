<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <%= form_with(model: resource, url: session_path(resource_name), local: true, class: "space-y-4") do |f| %>
    <div class="p-4 bg-blue-200 text-gray-700 rounded-lg mt-6">
    <div class="space-y-1">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "input-field", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="space-y-1">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, class: "input-field", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center space-x-2">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-500 rounded focus:ring-2 focus:ring-blue-500" %>
        <%= f.label :remember_me, class: "text-sm text-gray-700" %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Log in", class: "w-full py-2 px-4 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mt-4">
      <%= link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path,  data: { turbo_method: "post" }, class: "w-full block text-center py-2 px-4 bg-red-500 text-white rounded-lg hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400", form: { authenticity_token: true } %>
      <%= link_to "Spotify でログイン", user_spotify_omniauth_authorize_path, class: "btn btn-success" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
  </div>
  </div>


