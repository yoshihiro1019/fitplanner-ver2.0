<div class="space-y-4">
  <!-- Log in Link -->
  <%- if controller_name != 'sessions' %>
    <div class="text-center">
      <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
  <% end %>

  <!-- Sign up Link -->
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="text-center">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
  <% end %>

  <!-- Forgot Password Link -->
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="text-center">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
  <% end %>

  <!-- Confirmation Instructions Link -->
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="text-center">
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
  <% end %>

  <!-- Unlock Instructions Link -->
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="text-center">
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
  <% end %>

  <!-- Google Sign-In Button -->
  <%- if devise_mapping.omniauthable? %>
    <div>
      <%= button_to 'Sign in with Google', user_google_oauth2_omniauth_authorize_path, class: "w-full bg-red-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400" %>
    </div>
  <% end %>
</div>
