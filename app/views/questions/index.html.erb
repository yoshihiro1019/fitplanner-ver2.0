<div class="flex flex-col items-center space-y-6 mt-12">
  <h1 class="text-3xl font-bold text-gray-800">トレーニング提案</h1>
  <p class="text-lg text-gray-600">以下の質問に答えてください：</p>

  <%= form_with url: questions_path, method: :post, class: "w-full max-w-md bg-white p-6 rounded-lg shadow-md" do %>
    <!-- 年齢 -->
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-medium mb-2">年齢：</label>
      <%= text_field_tag :age, nil, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- トレーニング経験 -->
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-medium mb-2">トレーニング経験：</label>
      <%= select_tag :experience, options_for_select(['初心者', '中級者', '上級者']), class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- 重点を置きたい部位 -->
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-medium mb-2">重点を置きたい部位：</label>
      <%= select_tag :focus_area, options_for_select(['上半身', '下半身', '体幹']), class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- 提案を受け取るボタン -->
    <div class="text-center">
      <%= submit_tag '提案を受け取る', class: "w-full bg-blue-500 text-white py-2 px-4 rounded-md shadow hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>
  <% end %>

  <!-- 回答の表示 (flash[:suggestion] を表示) -->
  <% if flash[:suggestion].present? %>
    <div class="mt-6 p-4 bg-green-100 border border-green-300 rounded">
      <h2 class="text-xl font-bold text-gray-800">トレーニング提案</h2>
      <p class="text-gray-700"><%= flash[:suggestion] %></p>
    </div>
  <% end %>

  <!-- エラーメッセージ (flash[:error] を表示) -->
  <% if flash[:error].present? %>
    <div class="mt-6 p-4 bg-red-100 border border-red-300 rounded">
      <h2 class="text-xl font-bold text-gray-800">エラー</h2>
      <p class="text-gray-700"><%= flash[:error] %></p>
    </div>
  <% end %>

  <div id="flash_messages">
  <%= render 'shared/flash_messages' %>
</div>

</div>
