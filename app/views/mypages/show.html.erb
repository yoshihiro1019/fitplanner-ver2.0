<div class="bg-gray-100 p-6 rounded-lg shadow-md ">
  <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">マイページ</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- 質問形式トレーニング提案 -->
    <div class="bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 transform hover:scale-105">
      <%= link_to questions_path, class: "block p-6 text-center" do %>
        <div class="text-4xl mb-4">
          <i class="fas fa-robot  "></i>
        </div>
        <h2 class="text-lg font-semibold">トレーニングプラン作成(AI)</h2>
      <% end %>
    </div>

    <!-- 筋トレ記録 -->
    <div class="bg-gradient-to-r from-green-500 to-green-600 text-white rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 transform hover:scale-105">
      <%= link_to training_logs_path, class: "block p-6 text-center" do %>
        <div class="text-4xl mb-4">
        <i class="fas fa-dumbbell"></i>
        </div>
        <h2 class="text-lg font-semibold">トレーニング記録</h2>
      <% end %>
    </div>

    <!-- ジム検索 -->
    <div class="bg-gradient-to-r from-yellow-500 to-yellow-600 text-white rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 transform hover:scale-105">
      <%= link_to gym_search_path, class: "block p-6 text-center" do %>
        <div class="text-4xl mb-4">
          <i class="fas fa-map-marker-alt"></i>
        </div>
        <h2 class="text-lg font-semibold">ジム検索</h2>
      <% end %>
    </div>

    <!-- 部位別トレーニング検索 -->
    <div class="bg-gradient-to-r from-purple-500 to-purple-600 text-white rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 transform hover:scale-105">
      <%= link_to new_training_suggestion_path, class: "block p-6 text-center" do %>
        <div class="text-4xl mb-4">
          <i class="fas fa-running"></i>
        </div>
        <h2 class="text-lg font-semibold">部位別トレーニング検索</h2>
      <% end %>
    </div>

    <!-- BGM -->
    <div class="bg-gradient-to-r from-red-500 to-red-600 text-white rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 transform hover:scale-105">
      <%= link_to bgm_path, class: "block p-6 text-center" do %>
        <div class="text-4xl mb-4">
          <i class="fas fa-music"></i>
        </div>
        <h2 class="text-lg font-semibold">BGM</h2>
      <% end %>
    </div>



    <!-- パスワードを変更する -->
    <div class="bg-gradient-to-r from-gray-500 to-gray-600 text-white rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 transform hover:scale-105">
      <%= link_to edit_direct_password_path, class: "block p-6 text-center" do %>
        <div class="text-4xl mb-4">
          <i class="fas fa-key"></i>
        </div>
        <h2 class="text-lg font-semibold">パスワードを変更する</h2>
      <% end %>
    </div>
  </div>
</div>

