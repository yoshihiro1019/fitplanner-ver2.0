<h1>トレーニング記録を追加</h1>

<%= form_with(model: @training_log, local: true) do |form| %>
  <div>
    <%= form.label :training_type, 'トレーニングの種類' %>
    <%= form.text_field :training_type %>
  </div>

  <div>
    <%= form.label :weight, '重量 (kg)' %>
    <%= form.number_field :weight %>
  </div>

  <div>
    <%= form.label :reps, '回数' %>
    <%= form.number_field :reps %>
  </div>

  <div>
    <%= form.label :sets, 'セット数' %>
    <%= form.number_field :sets %>
  </div>

  <div>
    <%= form.label :day_of_week, "曜日" %>
    <%= form.select :day_of_week, [["日曜日", "Sunday"], ["月曜日", "Monday"], ["火曜日", "Tuesday"], ["水曜日", "Wednesday"], ["木曜日", "Thursday"], ["金曜日", "Friday"], ["土曜日", "Saturday"]] %>
  </div>

  <div>
    <%= form.submit '保存' %>
  </div>
<% end %>
