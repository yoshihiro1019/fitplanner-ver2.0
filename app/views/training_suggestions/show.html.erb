<!-- 画面全体をレイアウト -->
<div class="min-h-screen flex flex-col items-center justify-start pt-10">

  <% if @suggestions.present? %>
    <!-- 部位名付きタイトル -->
    <h1 class="text-2xl font-bold mb-4"><%= t("training_suggestions.result_title", body_part: @body_part.name) %></h1>

    <!-- 提案されたトレーニング一覧 -->
    <div class="space-y-6">
      <% @suggestions.each do |exercise| %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold mb-2"><%= exercise[:name] %></h2>
          <p class="text-gray-700 mb-4"><%= exercise[:description] %></p>
          <div class="w-full max-w-full overflow-hidden">
            <iframe
              class="w-full aspect-video rounded"
              src="<%= exercise[:youtube_url] %>"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen>
            </iframe>
          </div>
        </div>
      <% end %>
    </div>

    <!-- 戻るリンク -->
    <div class="mt-6 text-center">
  <%= link_to t("training_suggestions.back_to_selection"), new_training_suggestion_path,
        class: "inline-block bg-blue-500 text-white py-2 px-4 rounded shadow-md hover:bg-blue-600 transition duration-200" %>
</div>


  <% else %>
    <!-- エラーメッセージ -->
    <p><%= t("training_suggestions.no_suggestions") %></p>
  <% end %>

</div>


</div>
