<!-- 画面全体をレイアウトする場合 -->
<div class="min-h-screen flex flex-col items-center justify-start pt-10">
  <!-- フォームと同じくらいの幅 -->
  
    <% if @suggestions.present? %>
      <h1 class="text-2xl font-bold mb-4"><%= @body_part.name %>のトレーニング</h1>
      <div class="space-y-6">
        <% @suggestions.each do |exercise| %>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-2"><%= exercise[:name] %></h2>
            <p class="text-gray-700 mb-4"><%= exercise[:description] %></p>
            <div class="w-full max-w-full overflow-hidden">
              <iframe
                class="w-full aspect-video rounded"
                src="<%= exercise[:youtube_url] %>"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
              </iframe>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mt-6">
        <%= link_to '部位選択に戻る', new_training_suggestion_path, class: "text-blue-500 hover:underline" %>
      </div>
    <% else %>
      <p>提案が見つかりません。</p>
    <% end %>
  </div>
</div>
