<% provide :title, "部位別トレーニング検索 | FitAIplanner" %>
<div class="container mx-auto px-4 py-6">
  <% if @suggestions.present? %>
    <h1 class="text-2xl font-bold mb-4"><%= @body_part.name %>のトレーニング提案</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6">
      <% @suggestions.each do |exercise| %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold mb-2"><%= exercise[:name] %></h2>
          <p class="text-gray-700"><%= exercise[:description] %></p>
        </div>
      <% end %>
    </div>
    <div class="mt-6">
      <%= link_to '部位選択に戻る', new_training_suggestion_path, class: "text-blue-500 hover:underline" %>
    </div>
  <% else %>
  
  <% end %>
</div>

