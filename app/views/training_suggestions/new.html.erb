<div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-lg">
  <%= form_with url: training_suggestions_path, method: :post, html: { class: "space-y-6" } do %>
    <!-- 部位を選択 -->
    <div>
      <label for="body_part_id" class="block text-sm font-medium text-gray-700 mb-2">部位を選択</label>
      <select name="body_part_id" id="body_part_id" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500">
        <% @body_parts.uniq.each do |part| %>  <!-- uniqで重複を排除 -->
          <option value="<%= part.id %>" <%= 'selected' if part.id == params[:body_part_id].to_i %>>
            <%= part.name %>
          </option>
        <% end %>
      </select>
    </div>

    <!-- 提案を生成ボタン -->
    <div>
      <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400">
        提案を生成
      </button>
    </div>
  <% end %>
</div>
